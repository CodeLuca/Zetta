<script>
	$(function(){
		$.get('https://eu.mc-api.net/v3/server/info/mcpvp.com', function( data ){
			if(data.error)
				$(".status").html( '<font color="#8A0000"> Server offline.</font>' );
			else {
				$(".status").html( '<font color="##003103"> Server online! Version: ' + data.version.name +'</font> <br>' + 'Players online: ' + data.players.online + '/' + data.players.max );
			}
		});
	});
</script>